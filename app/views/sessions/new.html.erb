<div class="w-1/2 mx-auto">
  <h2 class="font-bold text-4xl mb-6">Login</h2>

  <%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |form| %>
    <div>
      <%= form.label :email, class:"block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.email_field :email, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>

    <div>
      <div class="flex items-center justify-between">
        <%= form.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
      </div>
      <div class="mt-2">
        <%= form.password_field :password, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>

    <div class="mt-8">
      <%= form.submit 'Login', class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
